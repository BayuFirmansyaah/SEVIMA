<%- include('../../partials/admin/header') %>

<% let i=1; %> 
<% quiz.forEach( q => { %>    
    <div class="card shadow mb-4 mt-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Soal Quiz <%= i++ %> </h6>
        </div>
        
        <div class="card-body">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <img src="img/quiz/<%= q.image %>" alt="" style="width: 100%;">
                    </div>
                </div>

                <div class="row">
                    <% let answers = JSON.parse(q.answer) %>
                    <% let value = ['value_a','value_b','value_c','value_d'] %>
                    <% let key = ['answer_a','answer_b','answer_c','answer_d'] %>  

                    <% for( let index = 0; index < answers.length; index++ ) { %>
    
                        <% if(answers[index][value[index]] == 0){ %> 
                            <div class="col-lg-6">
                                <div class="box-answer" style="width:100%;height:80px;background-color:red; margin-top:15px;line-height: 80px; padding:0px 15px; font-size: 18px;color: white;">
                                    <%= answers[index][key[index]] %> 
                                </div>
                            </div>
                        <% } else { %>
                            <div class="col-lg-6">
                                <div class="box-answer" style="width:100%;height:80px;background-color:green; margin-top:15px;line-height: 80px; padding:0px 15px; font-size: 18px;color: white;">
                                    <%= answers[index][key[index]] %> 
                                </div>
                            </div>
                        <% } %> 
                        
                    <% } %>

                </div>

            </div>
        </div>
    </div>
<% }) %>


<%- include('../../partials/admin/footer') %>